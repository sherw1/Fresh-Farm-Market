@page
@model AS_Assignment2.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2>Forgot Password</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div style="padding: 15px; margin-bottom: 20px; border: 1px solid; border-radius: 4px; @(Model.IsSuccess ? "background-color: #d4edda; border-color: #c3e6cb; color: #155724;" : "background-color: #f8d7da; border-color: #f5c6cb; color: #721c24;")">
        @Model.Message
    </div>
}

<form method="post">
    <div asp-validation-summary="All"></div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Input.Email" style="display: block; margin-bottom: 5px;">Email Address</label>
        <input asp-for="Input.Email" style="width: 100%; max-width: 400px; padding: 8px;" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">Send Reset Link</button>
</form>

<p style="margin-top: 20px;"><a href="/Account/Login"> Back to Login</a></p>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
